#!/bin/bash

if ! command -v python3 &>/dev/null; then
    echo "Python 3 is not installed. Please install it first."
    exit 1
fi

pip install -q requests pyyaml

cd "$(dirname "$0")/.."

if [ ! -x "$(command -v chmod)" ]; then
    echo "chmod command not found. Please install it first."
    exit 1
fi

python main.py
